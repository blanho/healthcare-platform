<?xml version="1.0" encoding="UTF-8"?>
<!--
  Logback configuration for Healthcare Platform
  
  Features:
  - JSON structured logging for production
  - Console logging for development
  - MDC context (correlationId, userId, requestUri)
  - PII masking for accidental PII leaks
  - Rolling file appender with size limits
-->
<configuration scan="true" scanPeriod="30 seconds">
    
    <!-- ===================================== -->
    <!-- Properties -->
    <!-- ===================================== -->
    <property name="LOG_PATH" value="${LOG_PATH:-logs}"/>
    <property name="LOG_FILE" value="${LOG_FILE:-healthcare-platform}"/>
    <property name="LOG_LEVEL_ROOT" value="${LOG_LEVEL_ROOT:-INFO}"/>
    <property name="LOG_LEVEL_APP" value="${LOG_LEVEL_APP:-DEBUG}"/>
    
    <!-- ===================================== -->
    <!-- PII Masking Pattern -->
    <!-- ===================================== -->
    <!-- Masks SSN, email, phone numbers in log messages -->
    <conversionRule conversionWord="maskedMsg" 
                    converterClass="com.healthcare.common.logging.PiiMaskingConverter"/>
    
    <!-- ===================================== -->
    <!-- Console Appender (Development) -->
    <!-- ===================================== -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%X{correlationId:-}] [%X{userId:-}] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- ===================================== -->
    <!-- JSON Console Appender (Production) -->
    <!-- ===================================== -->
    <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="ch.qos.logback.contrib.json.classic.JsonLayout">
                <timestampFormat>yyyy-MM-dd'T'HH:mm:ss.SSSZ</timestampFormat>
                <timestampFormatTimezoneId>UTC</timestampFormatTimezoneId>
                <appendLineSeparator>true</appendLineSeparator>
                
                <!-- Include MDC context -->
                <jsonFormatter class="ch.qos.logback.contrib.jackson.JacksonJsonFormatter">
                    <prettyPrint>false</prettyPrint>
                </jsonFormatter>
            </layout>
        </encoder>
    </appender>
    
    <!-- ===================================== -->
    <!-- Rolling File Appender -->
    <!-- ===================================== -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${LOG_FILE}.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%X{correlationId:-}] [%X{userId:-}] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${LOG_FILE}-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- ===================================== -->
    <!-- Async Appender for Performance -->
    <!-- ===================================== -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <neverBlock>true</neverBlock>
        <appender-ref ref="FILE"/>
    </appender>
    
    <!-- ===================================== -->
    <!-- Audit File Appender (Separate file for HIPAA) -->
    <!-- ===================================== -->
    <appender name="AUDIT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/audit.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%X{correlationId:-}] [%X{userId:-}] %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/audit-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>365</maxHistory>  <!-- 1 year retention for HIPAA -->
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- ===================================== -->
    <!-- Logger Configurations -->
    <!-- ===================================== -->
    
    <!-- Application loggers -->
    <logger name="com.healthcare" level="${LOG_LEVEL_APP}" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE"/>
    </logger>
    
    <!-- Audit logger (separate file) -->
    <logger name="com.healthcare.audit" level="INFO" additivity="false">
        <appender-ref ref="AUDIT_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>
    
    <!-- Security events -->
    <logger name="com.healthcare.auth" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE"/>
        <appender-ref ref="AUDIT_FILE"/>
    </logger>
    
    <!-- Spring Framework -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.springframework.security" level="INFO"/>
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.springframework.boot" level="INFO"/>
    
    <!-- Hibernate - reduce noise -->
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor.sql" level="TRACE"/>
    
    <!-- Connection pool -->
    <logger name="com.zaxxer.hikari" level="INFO"/>
    
    <!-- Redis -->
    <logger name="io.lettuce" level="WARN"/>
    <logger name="org.springframework.data.redis" level="INFO"/>
    
    <!-- Suppress noisy loggers -->
    <logger name="org.apache.catalina" level="WARN"/>
    <logger name="org.apache.tomcat" level="WARN"/>
    
    <!-- ===================================== -->
    <!-- Root Logger -->
    <!-- ===================================== -->
    <root level="${LOG_LEVEL_ROOT}">
        <appender-ref ref="CONSOLE"/>
    </root>
    
    <!-- ===================================== -->
    <!-- Profile-specific Configuration -->
    <!-- ===================================== -->
    
    <!-- Production profile: use JSON logging -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="JSON_CONSOLE"/>
            <appender-ref ref="ASYNC_FILE"/>
        </root>
        
        <logger name="com.healthcare" level="INFO" additivity="false">
            <appender-ref ref="JSON_CONSOLE"/>
            <appender-ref ref="ASYNC_FILE"/>
        </logger>
        
        <!-- Disable SQL logging in production -->
        <logger name="org.hibernate.SQL" level="WARN"/>
        <logger name="org.hibernate.type.descriptor.sql" level="WARN"/>
    </springProfile>
    
    <!-- Local/Development profile: verbose console logging -->
    <springProfile name="local,dev">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE"/>
        </root>
        
        <logger name="com.healthcare" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>
    </springProfile>
    
</configuration>
