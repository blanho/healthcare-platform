# Healthcare Platform Environment Variables
# Copy this file to .env and configure for your environment

# =============================================
# Database
# =============================================
DATABASE_URL=jdbc:postgresql://localhost:5432/healthcare
DATABASE_USERNAME=healthcare
DATABASE_PASSWORD=healthcare

# =============================================
# Redis
# =============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================
# JWT Security
# =============================================
# IMPORTANT: Generate a secure 256-bit key for production
# Use: openssl rand -base64 32
JWT_SECRET=your-256-bit-secret-key-change-in-production
JWT_ISSUER_URI=http://localhost:8080

# =============================================
# AWS / LocalStack
# =============================================
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_REGION=us-east-1
AWS_S3_ENDPOINT=http://localhost:4566
S3_ATTACHMENTS_BUCKET=healthcare-attachments

# =============================================
# Email (MailHog for local dev)
# =============================================
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=

# =============================================
# Application
# =============================================
SPRING_PROFILES_ACTIVE=local
SERVER_PORT=8080
