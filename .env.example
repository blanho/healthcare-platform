# =============================================
# Environment Variables Template
# =============================================
# Copy to .env and fill in actual values
# NEVER commit .env file to git
# =============================================

# Database Configuration (Managed PostgreSQL recommended)
DATABASE_URL=jdbc:postgresql://your-db-host:25060/healthcare?sslmode=require
DATABASE_USERNAME=doadmin
DATABASE_PASSWORD=your-secure-password

# Redis Configuration (Managed Redis recommended)
REDIS_HOST=your-redis-host
REDIS_PORT=25061
REDIS_PASSWORD=your-redis-password

# JWT Configuration
JWT_SECRET=your-very-long-random-secret-key-min-256-bits
JWT_EXPIRATION=3600000

# AWS/DigitalOcean Spaces Configuration
AWS_REGION=nyc3
AWS_ACCESS_KEY_ID=your-spaces-access-key
AWS_SECRET_ACCESS_KEY=your-spaces-secret-key
S3_BUCKET_NAME=healthcare-documents
S3_ENDPOINT=https://nyc3.digitaloceanspaces.com

# SQS Configuration (or use DigitalOcean Functions)
SQS_QUEUE_URL=your-queue-url

# SMTP Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_FROM=noreply@yourdomain.com

# Application Configuration
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

# PostgreSQL (if self-hosted)
POSTGRES_DB=healthcare

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-key

# Frontend
VITE_API_URL=https://api.yourdomain.com
